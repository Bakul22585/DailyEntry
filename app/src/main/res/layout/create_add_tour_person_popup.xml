<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_bottom"
    android:paddingBottom="16dp">

    <View
        android:id="@+id/CreateAddTourPersonPopupHeaderTitle"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="100dp"
        android:background="@drawable/border_bottom" />

    <TextView
        android:id="@+id/createAddTourPersonPopupHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Add New Tour Person"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/CreateAddTourPersonPopupHeaderTitle"
        app:layout_constraintTop_toTopOf="@+id/CreateAddTourPersonPopupHeaderTitle" />

    <EditText
        android:id="@+id/editTextTourPersonName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/ic_baseline_person_24_primary"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Enter Tour Person Name"
        android:inputType="textPersonName"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CreateAddTourPersonPopupHeaderTitle" />

    <TextView
        android:id="@+id/textViewTourPersonNameError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:text="Please Enter Tour Person Name"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTourPersonName" />

    <Button
        android:id="@+id/btnAddTourPerson"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_bg"
        android:text="Add Person"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTourPersonNameError" />

</androidx.constraintlayout.widget.ConstraintLayout>